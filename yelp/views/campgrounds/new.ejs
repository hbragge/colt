<% include ../partials/header %>

<div class="row justify-content-center">

<div class="col-md-12 text-center">
  <h1>New Campground</h1>
</div>
<div style="col-xs-12 col-md-6 col-lg-4">
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="name" placeholder="name" required>
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="price" value="0.00" min="0.00" step="0.01">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="image url" required>
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="description" placeholder="description">
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
  </form>
  <a href="/campgrounds">Back</a>
</div>

</div>

<% include ../partials/footer %>
