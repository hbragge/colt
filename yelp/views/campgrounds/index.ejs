<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1>Campgrounds</h1>
    <p>View campgrounds all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">New Campground</a>
    </p>
  </div>
</header>

<div class="row text-center">
<% campgrounds.forEach(function(cg) { %>
   <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
     <div class="card">
       <img class="card-img-top" src="<%= cg.image %>" alt="<%= cg.name %>">
       <div class="card-body">
         <h5 class="card-title"><%= cg.name %></h5>
         <a href="/campgrounds/<%= cg._id %>" class="btn btn-primary">More Info</a>
       </div>
     </div>
   </div>
<% }); %>
</div>

<% include ../partials/footer %>
