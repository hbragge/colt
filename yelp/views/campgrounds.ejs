<% include partials/header %>

<div class="container">
<header class="jumbotron">
  <div class="container">
    <h1>Campgrounds</h1>
    <p>View campgrounds all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">New Campground</a>
      <a class="btn btn-primary btn-lg" href="/">Back</a>
    </p>
  </div>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap;">
<% campgrounds.forEach(function(cg) { %>
   <div class="col-md-3 col-sm-6">
     <div class="thumbnail">
       <img src="<%= cg.image %>">
       <div class="caption">
         <h4><%= cg.name %></h4>
       </div>
     </div>
   </div>
<% }); %>
</div>

</div>

<% include partials/footer %>
